@model RaunstrupAuth.Models.Speciale

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Speciale</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            @* bare et input felt som kan tage værdien or sende til controleren *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SpecialeNavn" class="control-label">Speciale navn</label>
                <input asp-for="SpecialeNavn" class="form-control" />
                <span asp-validation-for="SpecialeNavn" class="text-danger"></span>
            </div>
            @* En knap som submiter denne form data til controlleren *@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
