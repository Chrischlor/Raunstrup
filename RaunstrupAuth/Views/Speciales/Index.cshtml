@model IEnumerable<RaunstrupAuth.Models.Speciale>

@{
    ViewData["Title"] = "Index";
}

<h2>Specialer</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

@* laver en tabel med data fra flere tabeler og bruger en foreach til at delle alt dataen ud i viewet *@
<table class="table">
    <thead>
        <tr>
            <th>
                Speciale navn
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SpecialeNavn)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Spid">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Spid">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Spid">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
