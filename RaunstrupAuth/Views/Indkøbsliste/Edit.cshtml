@model RaunstrupAuth.Models.Indkøbsliste

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Indkøbsliste</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            @* det her er hvor vi har en viewbag som man kan vælge et tilhørende tilbud *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Iid" />
            <div class="form-group">
                <label asp-for="Tid" class="control-label"></label>
                <select asp-for="Tid" class="form-control" asp-items="ViewBag.Tid"></select>
                <span asp-validation-for="Tid" class="text-danger"></span>
            </div>
            @* det her er hvor vi kalder den viewbag som er metoden der er lavet i controlleren som gør vi kan vælge vare ved navn *@
            <div class="form-group">
                <label asp-for="Varenummer" class="control-label"></label>
                <select asp-for="Varenummer" class="form-control" asp-items="ViewBag.Varenummer"></select>
                <span asp-validation-for="Varenummer" class="text-danger"></span>
            </div>
            @* bare et input felt som kan tage værdien or sende til controleren *@
            <div class="form-group">
                <label asp-for="Antal" class="control-label"></label>
                <input asp-for="Antal" class="form-control" />
                <span asp-validation-for="Antal" class="text-danger"></span>
            </div>
            @* det her er hvor vi kalder den viewbag som er metoden der er lavet i controlleren som gør vi kan vælge rabat istedet for den id *@
            <div class="form-group">
                <label asp-for="Rid" class="control-label">Rabat</label>
                <select asp-for="Rid" class="form-control" asp-items="ViewBag.Rid"></select>
                <span asp-validation-for="Rid" class="text-danger"></span>
            </div>
            @* En knap som submiter denne form data til controlleren *@
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
