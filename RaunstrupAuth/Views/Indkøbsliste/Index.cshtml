@model IEnumerable<RaunstrupAuth.Models.Indkøbsliste>

@{
    ViewData["Title"] = "Index";
}

<h2>Indkøbsliste</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Indkøbsliste" method="post">
    <p>
        Indtast tilbuds ID <input type="number" name="searchNumber" />
        <input type="submit" value="Søg" />
    </p>

</form>

@* laver en tabel med data fra flere tabeler og bruger en foreach til at delle alt dataen ud i viewet *@
<table class="table">
    <thead>
        <tr>
            <th>
                Tilbud Id
            </th>
            <th>
                Varenummer
            </th>
            <th>
                Rabat
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Antal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.T.Tid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VarenummerNavigation.Varenummer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.R.rabat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Antal)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Iid">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Iid">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Iid">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
