@model RaunstrupAuth.Models.Rabat

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Rabat</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            @* bare et input felt som kan tage værdien or sende til controleren *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Rid" />
            <div class="form-group">
                <label asp-for="rabat" class="control-label">Rabat</label>
                <input asp-for="rabat" class="form-control" />
                <span asp-validation-for="rabat" class="text-danger"></span>
            </div>
            @* En knap som submiter denne form data til controlleren *@
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
