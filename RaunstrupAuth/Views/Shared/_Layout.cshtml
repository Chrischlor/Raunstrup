                            <a asp-area="" asp-controller="Adresse" asp-action="Index">Adresser</a>
                        </div>
                    </div>
                    <div class="dropdown">
                        <button onclick="myFunction2()" class="dropbtn">Data</button>
                        <div id="myDropdown2" class="dropdown-content">
                            <a asp-area="" asp-controller="Bynavn" asp-action="Index">Byer</a>
                            <a asp-area="" asp-controller="Speciales" asp-action="Index">Specialer</a>
                            <a asp-area="" asp-controller="Materialer" asp-action="Index">Materialer</a>
                            <a asp-area="" asp-controller="Rabats" asp-action="Index">Rabat</a>
                        </div>
                    </div>
                </ul>

                <partial name="_LoginPartial" />
                <ul class="nav navbar-nav">
                    <li><a asp-area="" asp-controller="Home" asp-action="About">About</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
                </ul>
                
            </div>
        </div>
    </nav>

    <partial name="_CookieConsentPartial" />

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2018 - RaunstrupAuth</p>
        </footer>
    </div>

