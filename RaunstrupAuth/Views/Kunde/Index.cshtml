@model IEnumerable<RaunstrupAuth.Models.Kunde>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

@* laver en tabel med data fra flere tabeler og bruger en foreach til at delle alt dataen ud i viewet *@
<table class="table">
    <thead>
        <tr>
            <th>
                Kunde Id
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Navn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tlf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mail)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.A)*@
                Adresse Id
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Kid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Navn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tlf)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.A.Aid)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Kid">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Kid">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Kid">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
