@model IEnumerable<RaunstrupAuth.Models.Medarbejderliste>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
 @* En søgebar som søger på tilbud *@
<form asp-controller="medarbejderlistes" method="post">
    <p>
        Indtast tilbuds ID <input type="number" name="searchNumber" />
        <input type="submit" value="Søg" />
    </p>

 @* laver en tabel med data fra flere tabeler og bruger en foreach til at delle alt dataen ud i viewet *@
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                Tilbud Id
            </th>
            <th>
                Medarbejder Id
            </th>
            <th>
                Medarbejder navn
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Timer)
            </th>
            <th>
                Rabat Id
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.T.Tid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.M.Mid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.M.Navn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Timer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.R.Rid)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Mlid">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Mlid">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Mlid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
