@model RaunstrupAuth.Models.Projekt

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Projekt</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            @* det her er hvor vi har en viewbag som man kan vælge et tilhørende tilbud *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Pid" />
            <div class="form-group">
                <label asp-for="Tid" class="control-label">Tilbud Id</label>
                <select asp-for="Tid" class="form-control" asp-items="ViewBag.Tid"></select>
                <span asp-validation-for="Tid" class="text-danger"></span>
            </div>
            @* det her er hvor vi kalder den viewbag som er metoden der er lavet i controlleren som gør vi kan vælge medarbejder ved navn *@
            <div class="form-group">
                <label asp-for="Mid" class="control-label">Projektleder</label>
                <select asp-for="Mid" class="form-control" asp-items="ViewBag.Mid"></select>
                <span asp-validation-for="Mid" class="text-danger"></span>
            </div>
            @* En knap som submiter denne form data til controlleren *@
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
