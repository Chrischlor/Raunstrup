@model IEnumerable<RaunstrupAuth.Models.Projekt>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

@* laver en tabel med data fra flere tabeler og bruger en foreach til at delle alt dataen ud i viewet *@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Projektleder)
            </th>
            <th>
                Tilbud Id
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Projektleder.Navn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.T.Tid)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Pid">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Pid">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Pid">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
